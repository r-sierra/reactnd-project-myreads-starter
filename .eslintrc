{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/jsx-no-bind": 2,
    "react/jsx-key": 2
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.6.3"
    }
  },
}
